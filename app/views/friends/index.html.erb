<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-between  align-items-center">
  <h1>Friends</h1>
  <%= link_to 'New Friend', new_friend_path , class: "btn btn-outline-primary"  if user_signed_in?%>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <%# <th>Last name</th> %>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <%# <th>User Id</th> %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each_with_index do |friend , index| %>
      <% if friend.user == current_user %>
        <tr class='clickable-row' data-href='url://link-for-first-row/'>
          <td><%= index+1  %></td>
          
          <td><%= link_to (friend.first_name+" "+friend.last_name), friend , class: "btn btn-outline-dark border-0 fst-italic"  %></td>
          <%# <td><%= friend.first_name %1></td> %> 
          <%# <td><%= friend.last_name %1></td> %>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <%# <td><%= friend.user_id %1></td> %>
          <%# <td><%= link_to 'Show', friend, class: "btn btn-outline-primary btn-sm"  %1></td> %>
          <td><%= link_to 'Edit', edit_friend_path(friend) ,class: "btn btn-outline-primary btn-sm" ,  title:"Edit" if  current_user == friend.user %></td>
          <td><%= link_to 'Delete' , friend, method: :delete, data: { confirm: 'Are you sure you want to remove your friend ?' } , class: "btn btn-outline-danger btn-sm" , title:"Remove" if current_user == friend.user  %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

